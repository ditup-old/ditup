<% 


//showing a follow/unfollow form

hideFollow = hideFollow || {};

hideFollow.view = hideFollow.view || false; //should we show the view?
hideFollow.hiding = hideFollow.hiding || false; //is hiding?
hideFollow.following = hideFollow.following || false; //is following?
hideFollow.collection = hideFollow.collection || 'dit'; //collection name (not used)

if(hideFollow.view === true) {
  if(hideFollow.following === true) {
  //showing an unfollow form
  %>
    <form id="unfollow-form" method="post">
      <input type="submit" name="submit" value="unfollow" />
    </form>
    
  <%} else {
  //showing a follow form %>
    <form id="follow-form" method="post">
      <input type="submit" name="submit" value="follow" />
    </form>
<%
  }
}%>
<% 
//showing a hide/unhide form
